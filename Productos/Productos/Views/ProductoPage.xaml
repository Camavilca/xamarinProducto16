<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Productos.Views.ProductoPage"
             Title="Producto">
    <StackLayout Margin="20">

        <Label Text="Nombre" />
        <Entry Text="{Binding Path=title}" Placeholder="Ingrese Nombre" />
        <Label Text="Stock" />
        <Entry Text="{Binding Path=content}" Placeholder="Ingrese el stock" />

        <Button Text="Save" 
                Clicked="OnSaveButtonClicked" />
        <Button Text="Delete"
                Clicked="OnDeleteButtonClicked" />
        <Button Text="Cancel" 
                Clicked="OnCancelButtonClicked" />
    </StackLayout>
</ContentPage>